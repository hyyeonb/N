<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dev3.nms.mapper.SnmpMetricMapper">

    <resultMap id="SnmpMetricResultMap" type="dev3.nms.vo.mgmt.SnmpMetricVO">
        <id property="METRIC_ID" column="METRIC_ID"/>
        <result property="TYPE" column="TYPE"/>
        <result property="OID_NAME" column="OID_NAME"/>
        <result property="OID_DESC" column="OID_DESC"/>
    </resultMap>

    <!-- 모든 메트릭 조회 -->
    <select id="findAll" resultMap="SnmpMetricResultMap">
        SELECT METRIC_ID, TYPE, OID_NAME, OID_DESC
        FROM b_snmp_metric_t
        ORDER BY TYPE, METRIC_ID
    </select>

    <!-- 타입별 메트릭 조회 -->
    <select id="findByType" resultMap="SnmpMetricResultMap">
        SELECT METRIC_ID, TYPE, OID_NAME, OID_DESC
        FROM b_snmp_metric_t
        WHERE TYPE = #{type}
        ORDER BY METRIC_ID
    </select>

    <!-- 메트릭 ID로 조회 -->
    <select id="findById" resultMap="SnmpMetricResultMap">
        SELECT METRIC_ID, TYPE, OID_NAME, OID_DESC
        FROM b_snmp_metric_t
        WHERE METRIC_ID = #{metricId}
    </select>

</mapper>
